#!name=Script
#!desc=HTTP Script Module.

[MITM]
hostname = %INSERT% *.googlevideo.com,api.m.jd.com, trade-acs.m.taobao.com

[Script]
# > YouTube 
YouTube.js = script-path=https://Choler.github.io/Surge/Script/YouTube.js,pattern=^https://[\s\S]*\.googlevideo\.com/.*&(oad|ctier),type=http-request

# > Display jd historical price
jd_price.js = requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/yichahucha/surge/master/jd_price.js,script-update-interval=0,pattern=^https?://api\.m\.jd\.com/client\.action\?functionId=(wareBusiness|serverConfig),type=http-response

# > Display taobao historical price
http-request ^http://.+/amdc/mobileDispatch requires-body=1,script-path=https://raw.githubusercontent.com/yichahucha/surge/master/tb_price.js
http-response ^https?://trade-acs\.m\.taobao\.com/gw/mtop\.taobao\.detail\.getdetail requires-body=1,script-path=https://raw.githubusercontent.com/yichahucha/surge/master/tb_price.js

# 京东签到
京东多合一签到 = type=cron,cronexp=5 0 * * *,wake-system=1,timeout=20,script-path=https://raw.githubusercontent.com/NobyDa/Script/master/JD-DailyBonus/JD_DailyBonus.js